@{
    ViewData["Title"] = "Erişim Reddedildi";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white text-center">
                    <h3 class="mb-0"><i class="bi bi-shield-exclamation"></i> Erişim Reddedildi</h3>
                </div>
                <div class="card-body p-4 text-center">
                    <div class="mb-4">
                        <i class="bi bi-shield-x" style="font-size: 5rem; color: #dc3545;"></i>
                    </div>
                    <h4 class="mb-3">Bu sayfaya erişim yetkiniz bulunmamaktadır.</h4>
                    <p class="text-muted mb-4">
                        Bu sayfaya erişmek için gerekli yetkiye sahip değilsiniz. 
                        Lütfen yetkili bir hesapla giriş yapın veya ana sayfaya dönün.
                    </p>
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="bi bi-house-door"></i> Ana Sayfaya Dön
                        </a>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-outline-secondary">
                            <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

