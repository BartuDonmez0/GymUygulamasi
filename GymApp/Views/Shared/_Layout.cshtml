@{
    var logoutMessage = Context.Request.Cookies["LogoutMessage"];
    if (!string.IsNullOrEmpty(logoutMessage))
    {
        Context.Response.Cookies.Delete("LogoutMessage");
    }
    var currentController = (ViewContext.RouteData.Values["controller"]?.ToString() ?? string.Empty).ToLowerInvariant();
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Spor Salonu Yönetim Sistemi</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GymApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body class="d-flex flex-column min-vh-100">
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-activity"></i> GymApp
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "home" ? "active-link" : string.Empty)" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "gymcenter" ? "active-link" : string.Empty)" asp-area="" asp-controller="GymCenter" asp-action="Index">
                                <i class="bi bi-building"></i> Spor Salonları
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "trainer" ? "active-link" : string.Empty)" asp-area="" asp-controller="Trainer" asp-action="Index">
                                <i class="bi bi-person-badge"></i> Antrenörler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "appointment" ? "active-link" : string.Empty)" asp-area="" asp-controller="Appointment" asp-action="Index">
                                <i class="bi bi-calendar-check"></i> Randevular
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "airecommendation" ? "active-link" : string.Empty)" asp-area="" asp-controller="AIRecommendation" asp-action="Index">
                                <i class="bi bi-robot"></i> AI Önerileri
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i> 
                                @{
                                    var userName = Context.Session.GetString("UserName");
                                    var userEmail = Context.Session.GetString("UserEmail");
                                    var isAdmin = Context.Session.GetString("IsAdmin") == "true";
                                    var isLoggedIn = !string.IsNullOrEmpty(userEmail);
                                }
                                @if (isLoggedIn)
                                {
                                    <span>@userName</span>
                                }
                                else
                                {
                                    <span>Hesap</span>
                                }
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                @if (isLoggedIn)
                                {
                                    @if (isAdmin)
                                    {
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Admin" asp-action="Index">
                                            <i class="bi bi-shield-lock"></i> Admin Paneli</a></li>
                                    }
                                    else
                                    {
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Profile">
                                            <i class="bi bi-person"></i> Profil Görüntüle</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right"></i> Çıkış Yap</a></li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Login">
                                        <i class="bi bi-box-arrow-in-right"></i> Giriş Yap</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Register">
                                        <i class="bi bi-person-plus"></i> Kayıt Ol</a></li>
                                }
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main class="flex-grow-1">
        @if (!string.IsNullOrEmpty(logoutMessage))
        {
            <div class="container pt-3 px-3 px-md-4">
                <div class="alert alert-dark alert-dismissible fade show logout-alert" role="alert">
                    <i class="bi bi-box-arrow-right me-2"></i>@logoutMessage
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        }
        <div class="container-fluid px-0">
            @RenderBody()
        </div>
    </main>

    <footer class="footer-custom mt-auto">
        <div class="container">
            <div class="row py-4">
                <div class="col-12 col-md-6 mb-3 mb-md-0">
                    <div class="footer-brand">
                        <h5 class="mb-2">
                            <i class="bi bi-activity text-white"></i> 
                            <span class="fw-bold">Gym</span><span class="fw-normal">App</span>
                        </h5>
                        <p class="mb-0 text-muted">Spor Salonu Yönetim ve Randevu Sistemi</p>
                    </div>
                </div>
                <div class="col-12 col-md-6 text-md-end">
                    <p class="mb-1 text-white-50 small">&copy; 2025 - GymApp - Tüm hakları saklıdır.</p>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white-50 text-decoration-none small footer-link">
                        Gizlilik Politikası
                    </a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
