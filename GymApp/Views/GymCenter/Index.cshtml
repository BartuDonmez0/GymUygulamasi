    @@media (max-width: 992px) {
        .row.g-4 {
            --bs-gutter-x: 1.5rem;
            --bs-gutter-y: 1.5rem;
        }

        .gym-card .card-body {
            padding: 1.5rem;
        }
    }

    /* Responsive - Tablet (768px ve altı) */
    @@media (max-width: 768px) {
        .container {
            padding-left: 1rem;
            padding-right: 1rem;
        }

        .page-header {
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .page-header h2 {
            font-size: 1.75rem;
        }

        .page-header p {
            font-size: 0.95rem;
        }

        .row.g-4 {
            --bs-gutter-x: 1rem;
            --bs-gutter-y: 1.25rem;
        }

        .gym-card {
            margin-bottom: 0;
        }

        .gym-card-image img {
            height: 220px !important;
        }

        .gym-card .card-body {
            padding: 1.25rem;
        }

        .gym-card .card-title {
            font-size: 1.15rem;
            margin-bottom: 0.75rem;
        }

        .gym-card .card-text {
            font-size: 0.9rem;
            line-height: 1.5;
        }

        .gym-card .d-flex {
            flex-direction: column;
            gap: 0.75rem;
            align-items: center;
        }

        .gym-card .btn {
            width: 100%;
            max-width: 200px;
        }
    }

    /* Responsive - Telefon (576px ve altı) */
    @@media (max-width: 576px) {
        .container {
            padding-left: 0.75rem;
            padding-right: 0.75rem;
        }

        .page-header {
            padding: 1.25rem 1rem;
            margin-bottom: 1.25rem;
            border-radius: 8px;
        }

        .page-header h2 {
            font-size: 1.5rem;
        }

        .page-header p {
            font-size: 0.9rem;
        }

        .row.g-4 {
            --bs-gutter-x: 0.75rem;
            --bs-gutter-y: 1rem;
        }

        .gym-card {
            margin-bottom: 0;
            border-radius: 12px;
        }

        .gym-card-image img {
            height: 200px !important;
        }

        .gym-card .card-body {
            padding: 1rem;
        }

        .gym-card .card-title {
            font-size: 1.05rem;
            margin-bottom: 0.625rem;
            line-height: 1.3;
        }

        .gym-card .card-text {
            font-size: 0.85rem;
            line-height: 1.5;
            margin-bottom: 0.75rem;
        }

        .gym-card .card-text.small {
            font-size: 0.8rem;
        }

        .gym-card .d-flex {
            flex-direction: column;
            gap: 0.75rem;
            text-align: center;
            align-items: center;
        }

        .gym-card .btn {
            width: 100%;
            max-width: 100%;
            padding: 0.6rem 1rem;
            font-size: 0.875rem;
        }

        .gym-card-overlay .btn {
            font-size: 0.8rem;
