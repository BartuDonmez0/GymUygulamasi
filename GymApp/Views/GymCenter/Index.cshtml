@model List<GymApp.Entities.GymCenter>
@{
    ViewData["Title"] = "Spor Salonları";
}

<div class="container px-3 px-md-4">
<div class="page-header mb-4">
    <h2><i class="bi bi-building"></i> Spor Salonları</h2>
    <p class="text-muted mb-0">Bölgenizdeki spor salonlarını keşfedin</p>
</div>

@if (Model != null && Model.Any())
{
    <div class="row g-4">
        @foreach (var gymCenter in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="gym-card card h-100 shadow-sm">
                    <div class="gym-card-image">
                        <img src="@(string.IsNullOrEmpty(gymCenter.ImageUrl) ? "https://via.placeholder.com/400x250?text=Gym" : gymCenter.ImageUrl)" 
                             class="card-img-top" alt="@gymCenter.Name" style="height: 250px; object-fit: cover;">
                        <div class="gym-card-overlay">
                            <a href="@Url.Action("Details", "GymCenter", new { id = gymCenter.Id })" class="btn btn-light btn-sm">
                                <i class="bi bi-eye"></i> Detayları Gör
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title fw-bold">@gymCenter.Name</h5>
                        <p class="card-text text-muted small mb-2">
                            <i class="bi bi-geo-alt"></i> @gymCenter.Address
                        </p>
                        <p class="card-text">
                            @(string.IsNullOrEmpty(gymCenter.Description) ? "Açıklama bulunmamaktadır." : (gymCenter.Description.Length > 100 ? gymCenter.Description.Substring(0, 100) + "..." : gymCenter.Description))
                        </p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <small class="text-muted">
                                <i class="bi bi-clock"></i> 
                                @{
                                    var workingHoursDisplay = "Belirtilmemiş";
                                    if (!string.IsNullOrEmpty(gymCenter.WorkingHoursJson) && gymCenter.WorkingHoursJson != "[]")
                                    {
                                        try
                                        {
                                            // Yeni format: [{"Day": 1, "Hours": ["10-11", "11-12"]}]
                                            var workingHoursData = System.Text.Json.JsonSerializer.Deserialize<List<System.Text.Json.JsonElement>>(gymCenter.WorkingHoursJson);
                                            if (workingHoursData != null && workingHoursData.Any())
                                            {
                                                var daysOfWeek = new[] { "Pazar", "Pazartesi", "Salı", "Çarşamba", "Perşembe", "Cuma", "Cumartesi" };
                                                var firstItem = workingHoursData.First();
                                                
                                                // Yeni format kontrolü
                                                if (firstItem.TryGetProperty("Day", out var dayElement) && 
                                                    firstItem.TryGetProperty("Hours", out var hoursElement))
                                                {
                                                    var day = dayElement.GetInt32();
                                                    var hours = hoursElement.EnumerateArray()
                                                        .Select(h => h.GetString())
                                                        .Where(h => !string.IsNullOrEmpty(h))
                                                        .Take(2) // İlk 2 saati göster
                                                        .ToList();
                                                    
                                                    if (hours.Any())
                                                    {
                                                        var formattedHours = hours.Select(h => 
                                                        {
                                                            var parts = h.Split('-');
                                                            if (parts.Length == 2)
                                                            {
                                                                return $"{parts[0]}:00-{parts[1]}:00";
                                                            }
                                                            return h;
                                                        });
                                                        
                                                        workingHoursDisplay = $"{daysOfWeek[day]}: {string.Join(", ", formattedHours)}";
                                                        if (workingHoursData.Count > 1)
                                                        {
                                                            workingHoursDisplay += $" (+{workingHoursData.Count - 1} gün)";
                                                        }
                                                    }
                                                }
                                                // Eski format desteği
                                                else if (firstItem.TryGetProperty("Day", out var dayElementOld) && 
                                                         firstItem.TryGetProperty("TimeRange", out var timeRangeElement))
                                                {
                                                    var day = dayElementOld.GetInt32();
                                                    var timeRange = timeRangeElement.GetString();
                                                    workingHoursDisplay = $"{daysOfWeek[day]}: {timeRange}";
                                                    if (workingHoursData.Count > 1)
                                                    {
                                                        workingHoursDisplay += $" (+{workingHoursData.Count - 1} gün)";
                                                    }
                                                }
                                            }
                                        }
                                        catch
                                        {
                                            workingHoursDisplay = gymCenter.WorkingHours ?? "Belirtilmemiş";
                                        }
                                    }
                                    else if (!string.IsNullOrEmpty(gymCenter.WorkingHours))
                                    {
                                        workingHoursDisplay = gymCenter.WorkingHours;
                                    }
                                }
                                @workingHoursDisplay
                            </small>
                            <a href="@Url.Action("Details", "GymCenter", new { id = gymCenter.Id })" class="btn btn-primary btn-sm">
                                Detaylar <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <i class="bi bi-info-circle"></i> Henüz kayıtlı spor salonu bulunmamaktadır.
    </div>
}
</div>

<style>
    .page-header {
        text-align: center;
    }

    .gym-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .gym-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15) !important;
    }

    .gym-card-image {
        position: relative;
        overflow: hidden;
    }

    .gym-card-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .gym-card:hover .gym-card-overlay {
        opacity: 1;
    }

    .gym-card .card-body {
        padding: 1.5rem;
    }

    .gym-card .card-title {
        color: #333;
        margin-bottom: 0.75rem;
        text-align: center;
    }

    .gym-card .card-text {
        text-align: center;
    }

    .gym-card .d-flex {
        flex-direction: column;
        gap: 0.75rem;
        align-items: center;
    }

    .gym-card .btn {
        width: 100%;
        max-width: 200px;
    }

    /* Responsive - Tablet (992px ve altı) */
    @@media (max-width: 992px) {
        .row.g-4 {
            --bs-gutter-x: 1.5rem;
            --bs-gutter-y: 1.5rem;
        }

        .gym-card .card-body {
            padding: 1.5rem;
        }
    }

    /* Responsive - Tablet (768px ve altı) */
    @@media (max-width: 768px) {
        .container {
            padding-left: 1rem;
            padding-right: 1rem;
        }

        .page-header {
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .page-header h2 {
            font-size: 1.75rem;
        }

        .page-header p {
            font-size: 0.95rem;
        }

        .row.g-4 {
            --bs-gutter-x: 1rem;
            --bs-gutter-y: 1.25rem;
        }

        .gym-card {
            margin-bottom: 0;
        }

        .gym-card-image img {
            height: 220px !important;
        }

        .gym-card .card-body {
            padding: 1.25rem;
        }

        .gym-card .card-title {
            font-size: 1.15rem;
            margin-bottom: 0.75rem;
        }

        .gym-card .card-text {
            font-size: 0.9rem;
            line-height: 1.5;
        }

        .gym-card .d-flex {
            flex-direction: column;
            gap: 0.75rem;
            align-items: center;
        }

        .gym-card .btn {
            width: 100%;
            max-width: 200px;
        }
    }

    /* Responsive - Telefon (576px ve altı) */
    @@media (max-width: 576px) {
        .container {
            padding-left: 0.75rem;
            padding-right: 0.75rem;
        }

        .page-header {
            padding: 1.25rem 1rem;
            margin-bottom: 1.25rem;
            border-radius: 8px;
        }

        .page-header h2 {
            font-size: 1.5rem;
        }

        .page-header p {
            font-size: 0.9rem;
        }

        .row.g-4 {
            --bs-gutter-x: 0.75rem;
            --bs-gutter-y: 1rem;
        }

        .gym-card {
            margin-bottom: 0;
            border-radius: 12px;
        }

        .gym-card-image img {
            height: 200px !important;
        }

        .gym-card .card-body {
            padding: 1rem;
        }

        .gym-card .card-title {
            font-size: 1.05rem;
            margin-bottom: 0.625rem;
            line-height: 1.3;
        }

        .gym-card .card-text {
            font-size: 0.85rem;
            line-height: 1.5;
            margin-bottom: 0.75rem;
        }

        .gym-card .card-text.small {
            font-size: 0.8rem;
        }

        .gym-card .d-flex {
            flex-direction: column;
            gap: 0.75rem;
            text-align: center;
            align-items: center;
        }

        .gym-card .btn {
            width: 100%;
            max-width: 100%;
            padding: 0.6rem 1rem;
            font-size: 0.875rem;
        }

        .gym-card-overlay .btn {
            font-size: 0.8rem;
            padding: 0.4rem 0.75rem;
        }
    }

    /* Responsive - Çok Küçük Ekranlar (400px ve altı) */
    @@media (max-width: 400px) {
        .page-header {
            padding: 1rem 0.75rem;
        }

        .page-header h2 {
            font-size: 1.25rem;
        }

        .page-header p {
            font-size: 0.85rem;
        }

        .row.g-4 {
            --bs-gutter-x: 0.5rem;
            --bs-gutter-y: 0.875rem;
        }

        .gym-card-image img {
            height: 180px !important;
        }

        .gym-card .card-body {
            padding: 0.875rem;
        }

        .gym-card .card-title {
            font-size: 1rem;
        }

        .gym-card .card-text {
            font-size: 0.8rem;
        }

        .gym-card .card-text.small {
            font-size: 0.75rem;
        }
    }
</style>
