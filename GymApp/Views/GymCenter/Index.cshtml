@model List<GymApp.Entities.GymCenter>
@{
    ViewData["Title"] = "Spor Salonları";
}

<div class="container px-3 px-md-4">
<!-- Filtreleme Formu -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-12 col-md-4">
                <label for="dayOfWeek" class="form-label text-dark"><i class="bi bi-calendar-week"></i> Çalışma Günü</label>
                <select class="form-select" id="dayOfWeek">
                    <option value="">Tüm Günler</option>
                    @{
                        var selectedDay = ViewBag.DayOfWeek != null ? (int)ViewBag.DayOfWeek : (int?)null;
                    }
                    @if (selectedDay == 0) { <option value="0" selected>Pazar</option> } else { <option value="0">Pazar</option> }
                    @if (selectedDay == 1) { <option value="1" selected>Pazartesi</option> } else { <option value="1">Pazartesi</option> }
                    @if (selectedDay == 2) { <option value="2" selected>Salı</option> } else { <option value="2">Salı</option> }
                    @if (selectedDay == 3) { <option value="3" selected>Çarşamba</option> } else { <option value="3">Çarşamba</option> }
                    @if (selectedDay == 4) { <option value="4" selected>Perşembe</option> } else { <option value="4">Perşembe</option> }
                    @if (selectedDay == 5) { <option value="5" selected>Cuma</option> } else { <option value="5">Cuma</option> }
                    @if (selectedDay == 6) { <option value="6" selected>Cumartesi</option> } else { <option value="6">Cumartesi</option> }
                </select>
            </div>
            <div class="col-12 col-md-4">
                <label for="activityId" class="form-label text-dark"><i class="bi bi-list-check"></i> Aktivite</label>
                <select class="form-select" id="activityId">
                    <option value="">Tüm Aktiviteler</option>
                    @if (ViewBag.Activities != null)
                    {
                        var selectedActivityId = ViewBag.ActivityId != null ? (int)ViewBag.ActivityId : (int?)null;
                        @foreach (var activity in (List<GymApp.Entities.Activity>)ViewBag.Activities)
                        {
                            @if (selectedActivityId == activity.Id)
                            {
                                <option value="@activity.Id" selected>@activity.Name</option>
                            }
                            else
                            {
                                <option value="@activity.Id">@activity.Name</option>
                            }
                        }
                    }
                </select>
            </div>
            <div class="col-12 col-md-4 d-flex align-items-end">
                <button type="button" class="btn btn-dark w-100 me-2" onclick="applyFilters()">
                    <i class="bi bi-funnel"></i> Filtrele
                </button>
                <button type="button" class="btn btn-outline-dark" onclick="clearFilters()">
                    <i class="bi bi-x-circle"></i> Temizle
                </button>
            </div>
        </div>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="row g-4">
        @foreach (var gymCenter in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="gym-card card h-100 shadow-sm">
                    <div class="gym-card-image">
                        <img src="@(string.IsNullOrEmpty(gymCenter.ImageUrl) ? "https://via.placeholder.com/400x250?text=Gym" : gymCenter.ImageUrl)" 
                             class="card-img-top" alt="@gymCenter.Name" style="height: 250px; object-fit: cover;">
                        <div class="gym-card-overlay">
                            <a href="@Url.Action("Details", "GymCenter", new { id = gymCenter.Id })" class="btn btn-light btn-sm">
                                <i class="bi bi-eye"></i> Detayları Gör
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title fw-bold">@gymCenter.Name</h5>
                        <p class="card-text text-muted small mb-2">
                            <i class="bi bi-geo-alt"></i> @gymCenter.Address
                        </p>
                        <p class="card-text">
                            @(string.IsNullOrEmpty(gymCenter.Description) ? "Açıklama bulunmamaktadır." : (gymCenter.Description.Length > 100 ? gymCenter.Description.Substring(0, 100) + "..." : gymCenter.Description))
                        </p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <small class="text-muted">
                                <i class="bi bi-clock"></i> 
                                @{
                                    var workingHoursDisplay = "Belirtilmemiş";
                                    if (!string.IsNullOrEmpty(gymCenter.WorkingHoursJson) && gymCenter.WorkingHoursJson != "[]")
                                    {
                                        try
                                        {
                                            // Yeni format: [{"Day": 1, "Hours": ["10-11", "11-12"]}]
                                            var workingHoursData = System.Text.Json.JsonSerializer.Deserialize<List<System.Text.Json.JsonElement>>(gymCenter.WorkingHoursJson);
                                            if (workingHoursData != null && workingHoursData.Any())
                                            {
                                                var daysOfWeek = new[] { "Pazar", "Pazartesi", "Salı", "Çarşamba", "Perşembe", "Cuma", "Cumartesi" };
                                                var firstItem = workingHoursData.First();
                                                
                                                // Yeni format kontrolü
                                                if (firstItem.TryGetProperty("Day", out var dayElement) && 
                                                    firstItem.TryGetProperty("Hours", out var hoursElement))
                                                {
                                                    var day = dayElement.GetInt32();
                                                    var hours = hoursElement.EnumerateArray()
                                                        .Select(h => h.GetString())
                                                        .Where(h => !string.IsNullOrEmpty(h))
                                                        .Take(2) // İlk 2 saati göster
                                                        .ToList();
                                                    
                                                    if (hours.Any())
                                                    {
                                                        var formattedHours = hours.Select(h => 
                                                        {
                                                            var parts = h?.Split('-');
                                                            if (parts != null && parts.Length == 2)
                                                            {
                                                                return $"{parts[0]}:00-{parts[1]}:00";
                                                            }
                                                            return h;
                                                        });
                                                        
                                                        workingHoursDisplay = $"{daysOfWeek[day]}: {string.Join(", ", formattedHours)}";
                                                        if (workingHoursData.Count > 1)
                                                        {
                                                            workingHoursDisplay += $" (+{workingHoursData.Count - 1} gün)";
                                                        }
                                                    }
                                                }
                                                // Eski format desteği
                                                else if (firstItem.TryGetProperty("Day", out var dayElementOld) && 
                                                         firstItem.TryGetProperty("TimeRange", out var timeRangeElement))
                                                {
                                                    var day = dayElementOld.GetInt32();
                                                    var timeRange = timeRangeElement.GetString();
                                                    workingHoursDisplay = $"{daysOfWeek[day]}: {timeRange}";
                                                    if (workingHoursData.Count > 1)
                                                    {
                                                        workingHoursDisplay += $" (+{workingHoursData.Count - 1} gün)";
                                                    }
                                                }
                                            }
                                        }
                                        catch
                                        {
                                            workingHoursDisplay = gymCenter.WorkingHours ?? "Belirtilmemiş";
                                        }
                                    }
                                    else if (!string.IsNullOrEmpty(gymCenter.WorkingHours))
                                    {
                                        workingHoursDisplay = gymCenter.WorkingHours;
                                    }
                                }
                                @workingHoursDisplay
                            </small>
                            <a href="@Url.Action("Details", "GymCenter", new { id = gymCenter.Id })" class="btn btn-primary btn-sm">
                                Detaylar <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <i class="bi bi-info-circle"></i> Henüz kayıtlı spor salonu bulunmamaktadır.
    </div>
}
</div>

<style>
    .page-header {
        text-align: center;
    }

    .gym-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .gym-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15) !important;
    }

    .gym-card-image {
        position: relative;
        overflow: hidden;
    }

    .gym-card-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .gym-card:hover .gym-card-overlay {
        opacity: 1;
    }

    .gym-card .card-body {
        padding: 1.5rem;
    }

    .gym-card .card-title {
        color: #333;
        margin-bottom: 0.75rem;
        text-align: center;
    }

    .gym-card .card-text {
        text-align: center;
    }

    .gym-card .d-flex {
        flex-direction: column;
        gap: 0.75rem;
        align-items: center;
    }

    .gym-card .btn {
        width: 100%;
        max-width: 200px;
    }

