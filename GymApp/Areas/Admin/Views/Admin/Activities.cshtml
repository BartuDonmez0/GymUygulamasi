@model List<GymApp.Entities.Activity>
@{
    ViewData["Title"] = "Aktiviteler";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-0"><i class="bi bi-list-check"></i> Aktiviteler</h2>
                <p id="activityCount" class="text-muted">Toplam @Model.Count aktivite</p>
            </div>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-outline-secondary" onclick="loadActivitiesFromApi()">
                    <i class="bi bi-arrow-repeat"></i> API'den Yenile
                </button>
                <a href="@Url.Action("CreateActivity", "Admin")" class="btn btn-warning">
                    <i class="bi bi-plus-circle"></i> Yeni Aktivite Ekle
                </a>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Ad</th>
                                <th>Açıklama</th>
                                <th>Tip</th>
                                <th>Süre (dk)</th>
                                <th>Fiyat (₺)</th>
                                <th>Spor Salonu</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody id="activitiesTableBody">
                            @foreach (var activity in Model)
                            {
                                <tr>
                                    <td>@activity.Id</td>
                                    <td>@activity.Name</td>
                                    <td>@(activity.Description.Length > 50 ? activity.Description.Substring(0, 50) + "..." : activity.Description)</td>
                                    <td>@activity.Type</td>
                                    <td>@activity.Duration</td>
                                    <td>@activity.Price</td>
                                    <td>@(activity.GymCenter?.Name ?? "N/A")</td>
                                    <td>
                                        <a href="@Url.Action("EditActivity", "Admin", new { id = activity.Id })" class="btn btn-sm btn-primary">
                                            <i class="bi bi-pencil"></i> Düzenle
                                        </a>
                                        <button type="button" class="btn btn-sm btn-danger" onclick="deleteActivity(@activity.Id, this)">
                                            <i class="bi bi-trash"></i> Sil
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle"></i> Henüz aktivite bulunmamaktadır.
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Admin Paneline Dön
        </a>
    </div>
</div>

@* Bu sayfa aktiviteleri REST API (ApiController.GetActivities) üzerinden LINQ sorgusu ile de yükleyebilir. *@

<script>
    async function loadActivitiesFromApi() {
        const tbody = document.getElementById('activitiesTableBody');
        const countElement = document.getElementById('activityCount');

        if (!tbody) return;

        // Yükleniyor satırı
        tbody.innerHTML = `<tr>
            <td colspan="8" class="text-center">
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                Veriler API'den getiriliyor...
            </td>
        </tr>`;

        try {
            const response = await fetch('/api/api/activities');
            if (!response.ok) {
                throw new Error('HTTP ' + response.status);
            }

            const result = await response.json();
            if (!result.success) {
                throw new Error(result.message || 'Bilinmeyen API hatası');
            }

            const activities = result.data || [];

            if (countElement) {
                countElement.textContent = `Toplam ${activities.length} aktivite (REST API üzerinden)`;
            }

            if (!activities.length) {
                tbody.innerHTML = `<tr>
                    <td colspan="8" class="text-center">
                        <i class="bi bi-info-circle"></i> API'den aktivite bulunamadı.
                    </td>
                </tr>`;
                return;
            }

            const rows = activities.map(a => {
                // Property isimleri hem camelCase hem PascalCase destekleniyor
                const id = a.id || a.Id || 0;
                const name = a.name || a.Name || '';
                const description = (a.description || a.Description || '').length > 50
                    ? (a.description || a.Description || '').substring(0, 50) + '...'
                    : (a.description || a.Description || '');
                const type = a.type || a.Type || '';
                const duration = a.duration || a.Duration || 0;
                const price = a.price || a.Price || 0;
                const gymName = a.gymCenterName || a.GymCenterName || 'N/A';

                return `<tr>
                    <td>${id}</td>
                    <td>${name}</td>
                    <td>${description}</td>
                    <td>${type}</td>
                    <td>${duration}</td>
                    <td>${price}</td>
                    <td>${gymName}</td>
                    <td>
                        <a href="/Admin/Admin/EditActivity/${id}" class="btn btn-sm btn-primary">
                            <i class="bi bi-pencil"></i> Düzenle
                        </a>
                        <button type="button" class="btn btn-sm btn-danger" onclick="deleteActivity(${id}, this)">
                            <i class="bi bi-trash"></i> Sil
                        </button>
                    </td>
                </tr>`;
            }).join('');

            tbody.innerHTML = rows;
        } catch (error) {
            console.error('API hata:', error);
            tbody.innerHTML = `<tr>
                <td colspan="8" class="text-center text-danger">
                    <i class="bi bi-exclamation-triangle"></i>
                    API'den veriler alınırken hata oluştu: ${error.message}
                </td>
            </tr>`;
            if (countElement) {
                countElement.textContent = "Aktiviteler yüklenemedi (API hatası)";
            }
        }
    }

    // DELETE: API üzerinden aktivite silme
    async function deleteActivity(id, buttonElement) {
        if (!confirm('Bu aktiviteyi silmek istediğinize emin misiniz?')) {
            return;
        }

        const originalText = buttonElement.innerHTML;
        buttonElement.disabled = true;
        buttonElement.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Siliniyor...';

        try {
            const response = await fetch(`/api/api/activities/${id}`, {
                method: 'DELETE',
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                credentials: 'include'
            });

            if (!response.ok) {
                const errorData = await response.json().catch(() => ({}));
                throw new Error(errorData.message || `HTTP ${response.status}`);
            }

            const result = await response.json();
            if (result.success) {
                // Başarılı - satırı kaldır
                const row = buttonElement.closest('tr');
                if (row) {
                    row.remove();
                }
                // Sayfayı yenile
                await loadActivitiesFromApi();
                alert('Aktivite başarıyla silindi.');
            } else {
                throw new Error(result.message || 'Silme işlemi başarısız');
            }
        } catch (error) {
            console.error('Delete error:', error);
            alert('Aktivite silinirken hata oluştu: ' + error.message);
            buttonElement.disabled = false;
            buttonElement.innerHTML = originalText;
        }
    }

    // Sayfa yüklendiğinde API'den verileri çek
    document.addEventListener('DOMContentLoaded', function() {
        loadActivitiesFromApi();
    });
</script>

