@model List<GymApp.Entities.Trainer>
@using GymApp.Entities
@{
    ViewData["Title"] = "Antrenörler";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
            <div>
                <h2 class="mb-0"><i class="bi bi-person-badge"></i> Antrenörler</h2>
                <p class="text-muted mb-0">Toplam @Model.Count antrenör</p>
            </div>
            <a href="@Url.Action("CreateTrainer", "Admin")" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> <span class="d-none d-sm-inline">Yeni Antrenör Ekle</span><span class="d-sm-none">Yeni Ekle</span>
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Fotoğraf</th>
                                <th>ID</th>
                                <th>Ad</th>
                                <th>Soyad</th>
                                <th>E-posta</th>
                                <th>Telefon</th>
                                <th>Uzmanlık</th>
                                <th>Müsaitlik</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var trainer in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(trainer.ProfilePhotoUrl))
                                        {
                                            <img src="@trainer.ProfilePhotoUrl" alt="@trainer.FirstName @trainer.LastName" 
                                                 class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;" 
                                                 onerror="this.src='https://via.placeholder.com/50?text=@trainer.FirstName[0]'" />
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white" 
                                                 style="width: 50px; height: 50px; font-weight: bold;">
                                                @trainer.FirstName[0]@trainer.LastName[0]
                                            </div>
                                        }
                                    </td>
                                    <td>@trainer.Id</td>
                                    <td>@trainer.FirstName</td>
                                    <td>@trainer.LastName</td>
                                    <td>@trainer.Email</td>
                                    <td>@trainer.Phone</td>
                                    <td>@trainer.Specialization</td>
                                    <td>
                                        @{
                                            var workingHoursDisplay = "Belirtilmemiş";
                                            var workingHoursCount = 0;
                                            if (!string.IsNullOrEmpty(trainer.WorkingHoursJson) && trainer.WorkingHoursJson != "[]")
                                            {
                                                try
                                                {
                                                    var jsonDoc = System.Text.Json.JsonDocument.Parse(trainer.WorkingHoursJson);
                                                    var workingHoursList = new List<string>();
                                                    var dayNames = new[] { "Pazar", "Pazartesi", "Salı", "Çarşamba", "Perşembe", "Cuma", "Cumartesi" };
                                                    
                                                    foreach (var item in jsonDoc.RootElement.EnumerateArray())
                                                    {
                                                        if (item.TryGetProperty("Day", out var dayElement) && 
                                                            dayElement.ValueKind == System.Text.Json.JsonValueKind.Number)
                                                        {
                                                            var day = dayElement.GetInt32();
                                                            var dayName = day >= 0 && day < dayNames.Length ? dayNames[day] : $"Gün {day}";
                                                            
                                                            // Yeni format: Hours array
                                                            if (item.TryGetProperty("Hours", out var hoursElement) && 
                                                                hoursElement.ValueKind == System.Text.Json.JsonValueKind.Array)
                                                            {
                                                                var hours = hoursElement.EnumerateArray()
                                                                    .Select(h => h.GetString())
                                                                    .Where(h => !string.IsNullOrEmpty(h))
                                                                    .ToList();
                                                                
                                                                if (hours.Any())
                                                                {
                                                                    workingHoursList.Add($"{dayName}: {string.Join(", ", hours)}");
                                                                    workingHoursCount++;
                                                                }
                                                            }
                                                            // Eski format: TimeRange
                                                            else if (item.TryGetProperty("TimeRange", out var timeRangeElement) && 
                                                                     timeRangeElement.ValueKind == System.Text.Json.JsonValueKind.String)
                                                            {
                                                                var timeRange = timeRangeElement.GetString();
                                                                if (!string.IsNullOrEmpty(timeRange))
                                                                {
                                                                    workingHoursList.Add($"{dayName} {timeRange}");
                                                                    workingHoursCount++;
                                                                }
                                                            }
                                                        }
                                                    }
                                                    
                                                    if (workingHoursList.Any())
                                                    {
                                                        workingHoursDisplay = string.Join(" | ", workingHoursList);
                                                    }
                                                }
                                                catch
                                                {
                                                    workingHoursDisplay = "Belirtilmemiş";
                                                }
                                            }
                                        }
                                        @if (workingHoursDisplay != "Belirtilmemiş" && workingHoursCount > 0)
                                        {
                                            <span class="text-dark" style="font-size: 0.875rem; font-weight: 500;">@workingHoursDisplay</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">@workingHoursDisplay</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("EditTrainer", "Admin", new { id = trainer.Id })" class="btn btn-sm btn-primary">
                                            <i class="bi bi-pencil"></i> Düzenle
                                        </a>
                                        <form asp-action="DeleteTrainer" method="post" style="display: inline;" onsubmit="return confirm('Bu antrenörü silmek istediğinize emin misiniz?');">
                                            <input type="hidden" name="id" value="@trainer.Id" />
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i> Sil
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle"></i> Henüz antrenör bulunmamaktadır.
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Admin Paneline Dön
        </a>
    </div>
</div>

<style>
    /* Responsive - Tablet ve Telefon */
    @@media (max-width: 768px) {
        .container-fluid {
            padding-left: 1rem;
            padding-right: 1rem;
        }

        .row.mb-4 h2 {
            font-size: 1.5rem;
        }

        .row.mb-4 p {
            font-size: 0.9rem;
        }

        .row.mb-4 .btn {
            width: 100%;
            max-width: 100%;
            padding: 0.6rem 1rem;
            font-size: 0.9rem;
        }

        .table-responsive {
            border-radius: 8px;
        }

        .table {
            font-size: 0.875rem;
        }

        .table th,
        .table td {
            padding: 0.5rem 0.375rem;
            vertical-align: middle;
        }

        .table th {
            font-size: 0.8rem;
            white-space: nowrap;
        }

        .table td {
            font-size: 0.8rem;
        }

        .table .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
            margin: 0.125rem 0;
        }

        .table .btn-sm i {
            font-size: 0.875rem;
        }

        /* Hide less important columns on mobile */
        .table th:nth-child(5),
        .table td:nth-child(5),
        .table th:nth-child(6),
        .table td:nth-child(6) {
            display: none;
        }
    }

    /* Responsive - Küçük Telefon (576px ve altı) */
    @@media (max-width: 576px) {
        .container-fluid {
            padding-left: 0.75rem;
            padding-right: 0.75rem;
        }

        .row.mb-4 {
            margin-bottom: 1rem !important;
        }

        .row.mb-4 h2 {
            font-size: 1.25rem;
        }

        .row.mb-4 p {
            font-size: 0.85rem;
        }

        .card {
            border-radius: 8px;
        }

        .card-body {
            padding: 1rem;
        }

        .table {
            font-size: 0.8rem;
        }

        .table th,
        .table td {
            padding: 0.4rem 0.25rem;
        }

        .table th {
            font-size: 0.75rem;
        }

        .table td {
            font-size: 0.75rem;
        }

        .table .btn-sm {
            padding: 0.2rem 0.4rem;
            font-size: 0.7rem;
            width: 100%;
            margin: 0.25rem 0;
        }

        .table form {
            width: 100%;
        }

        /* Show only essential columns */
        .table th:nth-child(1),
        .table td:nth-child(1),
        .table th:nth-child(2),
        .table td:nth-child(2),
        .table th:nth-child(3),
        .table td:nth-child(3),
        .table th:nth-child(8),
        .table td:nth-child(8) {
            display: table-cell;
        }

        .table th:nth-child(4),
        .table td:nth-child(4),
        .table th:nth-child(5),
        .table td:nth-child(5),
        .table th:nth-child(6),
        .table td:nth-child(6),
        .table th:nth-child(7),
        .table td:nth-child(7) {
            display: none;
        }
    }
</style>

