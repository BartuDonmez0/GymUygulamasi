@model List<GymApp.Entities.Trainer>
@using GymApp.Entities
@{
    ViewData["Title"] = "Antrenörler";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
            <div>
                <h2 class="mb-0"><i class="bi bi-person-badge"></i> Antrenörler</h2>
                <p id="trainerCount" class="text-muted mb-0">Toplam @Model.Count antrenör</p>
            </div>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-outline-secondary" onclick="loadTrainersFromApi()">
                    <i class="bi bi-arrow-repeat"></i> API'den Yenile
                </button>
                <a href="@Url.Action("CreateTrainer", "Admin")" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> <span class="d-none d-sm-inline">Yeni Antrenör Ekle</span><span class="d-sm-none">Yeni Ekle</span>
                </a>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Fotoğraf</th>
                                <th>ID</th>
                                <th>Ad</th>
                                <th>Soyad</th>
                                <th>E-posta</th>
                                <th>Telefon</th>
                                <th>Uzmanlık</th>
                                <th>Müsaitlik</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody id="trainersTableBody">
                            @foreach (var trainer in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(trainer.ProfilePhotoUrl))
                                        {
                                            <img src="@trainer.ProfilePhotoUrl" alt="@trainer.FirstName @trainer.LastName" 
                                                 class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;" 
                                                 onerror="this.src='https://via.placeholder.com/50?text=@trainer.FirstName[0]'" />
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white" 
                                                 style="width: 50px; height: 50px; font-weight: bold;">
                                                @trainer.FirstName[0]@trainer.LastName[0]
                                            </div>
                                        }
                                    </td>
                                    <td>@trainer.Id</td>
                                    <td>@trainer.FirstName</td>
                                    <td>@trainer.LastName</td>
                                    <td>@trainer.Email</td>
                                    <td>@trainer.Phone</td>
                                    <td>@trainer.Specialization</td>
                                    <td>
                                        @{
                                            var workingHoursDisplay = "Belirtilmemiş";
                                            var workingHoursCount = 0;
                                            if (!string.IsNullOrEmpty(trainer.WorkingHoursJson) && trainer.WorkingHoursJson != "[]")
                                            {
                                                try
                                                {
                                                    var jsonDoc = System.Text.Json.JsonDocument.Parse(trainer.WorkingHoursJson);
                                                    var workingHoursList = new List<string>();
                                                    var dayNames = new[] { "Pazar", "Pazartesi", "Salı", "Çarşamba", "Perşembe", "Cuma", "Cumartesi" };
                                                    
                                                    foreach (var item in jsonDoc.RootElement.EnumerateArray())
                                                    {
                                                        if (item.TryGetProperty("Day", out var dayElement) && 
                                                            dayElement.ValueKind == System.Text.Json.JsonValueKind.Number)
                                                        {
                                                            var day = dayElement.GetInt32();
                                                            var dayName = day >= 0 && day < dayNames.Length ? dayNames[day] : $"Gün {day}";
                                                            
                                                            // Yeni format: Hours array
                                                            if (item.TryGetProperty("Hours", out var hoursElement) && 
                                                                hoursElement.ValueKind == System.Text.Json.JsonValueKind.Array)
                                                            {
                                                                var hours = hoursElement.EnumerateArray()
                                                                    .Select(h => h.GetString())
                                                                    .Where(h => !string.IsNullOrEmpty(h))
                                                                    .ToList();
                                                                
                                                                if (hours.Any())
                                                                {
                                                                    workingHoursList.Add($"{dayName}: {string.Join(", ", hours)}");
                                                                    workingHoursCount++;
                                                                }
                                                            }
                                                            // Eski format: TimeRange
                                                            else if (item.TryGetProperty("TimeRange", out var timeRangeElement) && 
                                                                     timeRangeElement.ValueKind == System.Text.Json.JsonValueKind.String)
                                                            {
                                                                var timeRange = timeRangeElement.GetString();
                                                                if (!string.IsNullOrEmpty(timeRange))
                                                                {
                                                                    workingHoursList.Add($"{dayName} {timeRange}");
                                                                    workingHoursCount++;
                                                                }
                                                            }
                                                        }
                                                    }
                                                    
                                                    if (workingHoursList.Any())
                                                    {
                                                        workingHoursDisplay = string.Join(" | ", workingHoursList);
                                                    }
                                                }
                                                catch
                                                {
                                                    workingHoursDisplay = "Belirtilmemiş";
                                                }
                                            }
                                        }
                                        @if (workingHoursDisplay != "Belirtilmemiş" && workingHoursCount > 0)
                                        {
                                            <span class="text-dark" style="font-size: 0.875rem; font-weight: 500;">@workingHoursDisplay</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">@workingHoursDisplay</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("EditTrainer", "Admin", new { id = trainer.Id })" class="btn btn-sm btn-primary">
                                            <i class="bi bi-pencil"></i> Düzenle
                                        </a>
                                        <button type="button" class="btn btn-sm btn-danger" onclick="deleteTrainer(@trainer.Id, this)">
                                            <i class="bi bi-trash"></i> Sil
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle"></i> Henüz antrenör bulunmamaktadır.
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Admin Paneline Dön
        </a>
    </div>
</div>

<style>
    /* Responsive - Tablet ve Telefon */
    @@media (max-width: 768px) {
        .container-fluid {
            padding-left: 1rem;
            padding-right: 1rem;
        }

        .row.mb-4 h2 {
            font-size: 1.5rem;
        }

        .row.mb-4 p {
            font-size: 0.9rem;
        }

        .row.mb-4 .btn {
            width: 100%;
            max-width: 100%;
            padding: 0.6rem 1rem;
            font-size: 0.9rem;
        }

        .table-responsive {
            border-radius: 8px;
        }

        .table {
            font-size: 0.875rem;
        }

        .table th,
        .table td {
            padding: 0.5rem 0.375rem;
            vertical-align: middle;
        }

        .table th {
            font-size: 0.8rem;
            white-space: nowrap;
        }

        .table td {
            font-size: 0.8rem;
        }

        .table .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
            margin: 0.125rem 0;
        }

        .table .btn-sm i {
            font-size: 0.875rem;
        }

        /* Hide less important columns on mobile */
        .table th:nth-child(5),
        .table td:nth-child(5),
        .table th:nth-child(6),
        .table td:nth-child(6) {
            display: none;
        }
    }

    /* Responsive - Küçük Telefon (576px ve altı) */
    @@media (max-width: 576px) {
        .container-fluid {
            padding-left: 0.75rem;
            padding-right: 0.75rem;
        }

        .row.mb-4 {
            margin-bottom: 1rem !important;
        }

        .row.mb-4 h2 {
            font-size: 1.25rem;
        }

        .row.mb-4 p {
            font-size: 0.85rem;
        }

        .card {
            border-radius: 8px;
        }

        .card-body {
            padding: 1rem;
        }

        .table {
            font-size: 0.8rem;
        }

        .table th,
        .table td {
            padding: 0.4rem 0.25rem;
        }

        .table th {
            font-size: 0.75rem;
        }

        .table td {
            font-size: 0.75rem;
        }

        .table .btn-sm {
            padding: 0.2rem 0.4rem;
            font-size: 0.7rem;
            width: 100%;
            margin: 0.25rem 0;
        }

        .table form {
            width: 100%;
        }

        /* Show only essential columns */
        .table th:nth-child(1),
        .table td:nth-child(1),
        .table th:nth-child(2),
        .table td:nth-child(2),
        .table th:nth-child(3),
        .table td:nth-child(3),
        .table th:nth-child(8),
        .table td:nth-child(8) {
            display: table-cell;
        }

        .table th:nth-child(4),
        .table td:nth-child(4),
        .table th:nth-child(5),
        .table td:nth-child(5),
        .table th:nth-child(6),
        .table td:nth-child(6),
        .table th:nth-child(7),
        .table td:nth-child(7) {
            display: none;
        }
    }
</style>

<script>
    // API üzerinden antrenörleri yükleme
    async function loadTrainersFromApi() {
        const tbody = document.getElementById('trainersTableBody');
        const countElement = document.getElementById('trainerCount');

        if (!tbody) return;

        // Yükleniyor satırı
        tbody.innerHTML = `<tr>
            <td colspan="9" class="text-center">
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                Veriler API'den getiriliyor...
            </td>
        </tr>`;

        try {
            const response = await fetch('/api/api/trainers');
            if (!response.ok) {
                throw new Error('HTTP ' + response.status);
            }

            const result = await response.json();
            if (!result.success) {
                throw new Error(result.message || 'Bilinmeyen API hatası');
            }

            const trainers = result.data || [];

            if (countElement) {
                countElement.textContent = `Toplam ${trainers.length} antrenör (REST API üzerinden)`;
            }

            if (!trainers.length) {
                tbody.innerHTML = `<tr>
                    <td colspan="9" class="text-center">
                        <i class="bi bi-info-circle"></i> API'den antrenör bulunamadı.
                    </td>
                </tr>`;
                return;
            }

            const rows = trainers.map(t => {
                // Property isimleri hem camelCase hem PascalCase destekleniyor
                const firstName = t.firstName || t.FirstName || '';
                const lastName = t.lastName || t.LastName || '';
                const profilePhotoUrl = t.profilePhotoUrl || t.ProfilePhotoUrl || '';
                const workingHoursJson = t.workingHoursJson || t.WorkingHoursJson || '[]';
                
                // İlk harfleri güvenli şekilde al
                const firstInitial = firstName && firstName.length > 0 ? firstName[0] : '?';
                const lastInitial = lastName && lastName.length > 0 ? lastName[0] : '?';
                
                const photoHtml = profilePhotoUrl 
                    ? `<img src="${profilePhotoUrl}" alt="${firstName} ${lastName}" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;" onerror="this.src='https://via.placeholder.com/50?text=${firstInitial}'" />`
                    : `<div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white" style="width: 50px; height: 50px; font-weight: bold;">${firstInitial}${lastInitial}</div>`;

                // WorkingHoursJson parse et
                let workingHoursDisplay = "Belirtilmemiş";
                try {
                    if (workingHoursJson && workingHoursJson !== "[]") {
                        const workingHours = JSON.parse(workingHoursJson);
                        const dayNames = ["Pazar", "Pazartesi", "Salı", "Çarşamba", "Perşembe", "Cuma", "Cumartesi"];
                        const workingHoursList = [];
                        
                        if (Array.isArray(workingHours)) {
                            workingHours.forEach(item => {
                                const day = item.Day !== undefined ? item.Day : (item.day !== undefined ? item.day : undefined);
                                if (day !== undefined) {
                                    const dayName = dayNames[day] || `Gün ${day}`;
                                    const hours = item.Hours || item.hours;
                                    const timeRange = item.TimeRange || item.timeRange;
                                    
                                    if (hours && Array.isArray(hours)) {
                                        if (hours.length > 0) {
                                            workingHoursList.push(`${dayName}: ${hours.join(", ")}`);
                                        }
                                    } else if (timeRange) {
                                        workingHoursList.push(`${dayName} ${timeRange}`);
                                    }
                                }
                            });
                        }
                        
                        if (workingHoursList.length > 0) {
                            workingHoursDisplay = workingHoursList.join(" | ");
                        }
                    }
                } catch (e) {
                    console.error('WorkingHoursJson parse hatası:', e);
                    workingHoursDisplay = "Belirtilmemiş";
                }

                const workingHoursHtml = workingHoursDisplay !== "Belirtilmemiş"
                    ? `<span class="text-dark" style="font-size: 0.875rem; font-weight: 500;">${workingHoursDisplay}</span>`
                    : `<span class="text-muted">${workingHoursDisplay}</span>`;

                const trainerId = t.id || t.Id || 0;
                const email = t.email || t.Email || '';
                const phone = t.phone || t.Phone || '';
                const specialization = t.specialization || t.Specialization || '';

                return `<tr>
                    <td>${photoHtml}</td>
                    <td>${trainerId}</td>
                    <td>${firstName}</td>
                    <td>${lastName}</td>
                    <td>${email}</td>
                    <td>${phone}</td>
                    <td>${specialization}</td>
                    <td>${workingHoursHtml}</td>
                    <td>
                        <a href="/Admin/Admin/EditTrainer/${trainerId}" class="btn btn-sm btn-primary">
                            <i class="bi bi-pencil"></i> Düzenle
                        </a>
                        <button type="button" class="btn btn-sm btn-danger" onclick="deleteTrainer(${trainerId}, this)">
                            <i class="bi bi-trash"></i> Sil
                        </button>
                    </td>
                </tr>`;
            }).join('');

            tbody.innerHTML = rows;
        } catch (error) {
            console.error('API hata:', error);
            tbody.innerHTML = `<tr>
                <td colspan="9" class="text-center text-danger">
                    <i class="bi bi-exclamation-triangle"></i>
                    API'den veriler alınırken hata oluştu: ${error.message}
                </td>
            </tr>`;
            if (countElement) {
                countElement.textContent = "Antrenörler yüklenemedi (API hatası)";
            }
        }
    }

    // DELETE: API üzerinden antrenör silme
    async function deleteTrainer(id, buttonElement) {
        if (!confirm('Bu antrenörü silmek istediğinize emin misiniz?')) {
            return;
        }

        const originalText = buttonElement.innerHTML;
        buttonElement.disabled = true;
        buttonElement.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Siliniyor...';

        try {
            const response = await fetch(`/api/api/trainers/${id}`, {
                method: 'DELETE',
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                credentials: 'include'
            });

            if (!response.ok) {
                const errorData = await response.json().catch(() => ({}));
                throw new Error(errorData.message || `HTTP ${response.status}`);
            }

            const result = await response.json();
            if (result.success) {
                // Başarılı - satırı kaldır
                const row = buttonElement.closest('tr');
                if (row) {
                    row.remove();
                }
                // Sayfayı yenile
                await loadTrainersFromApi();
                alert('Antrenör başarıyla silindi.');
            } else {
                throw new Error(result.message || 'Silme işlemi başarısız');
            }
        } catch (error) {
            console.error('Delete error:', error);
            alert('Antrenör silinirken hata oluştu: ' + error.message);
            buttonElement.disabled = false;
            buttonElement.innerHTML = originalText;
        }
    }

    // Sayfa yüklendiğinde API'den verileri çek
    document.addEventListener('DOMContentLoaded', function() {
        loadTrainersFromApi();
    });
</script>

