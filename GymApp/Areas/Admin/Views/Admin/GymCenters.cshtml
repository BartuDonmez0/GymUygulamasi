@model List<GymApp.Entities.GymCenter>
@{
    ViewData["Title"] = "Spor Salonları";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
            <div>
                <h2 class="mb-0"><i class="bi bi-building"></i> Spor Salonları</h2>
                <p id="gymCenterCount" class="text-muted mb-0">Toplam @Model.Count spor salonu</p>
            </div>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-outline-secondary" onclick="loadGymCentersFromApi()">
                    <i class="bi bi-arrow-repeat"></i> API'den Yenile
                </button>
                <a href="@Url.Action("CreateGymCenter", "Admin")" class="btn btn-danger">
                    <i class="bi bi-plus-circle"></i> <span class="d-none d-sm-inline">Yeni Spor Salonu Ekle</span><span class="d-sm-none">Yeni Ekle</span>
                </a>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Ad</th>
                                <th>Açıklama</th>
                                <th>Adres</th>
                                <th>Telefon</th>
                                <th>E-posta</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody id="gymCentersTableBody">
                            @foreach (var gymCenter in Model)
                            {
                                <tr>
                                    <td>@gymCenter.Id</td>
                                    <td>@gymCenter.Name</td>
                                    <td>@(gymCenter.Description.Length > 50 ? gymCenter.Description.Substring(0, 50) + "..." : gymCenter.Description)</td>
                                    <td>@(gymCenter.Address.Length > 30 ? gymCenter.Address.Substring(0, 30) + "..." : gymCenter.Address)</td>
                                    <td>@gymCenter.Phone</td>
                                    <td>@gymCenter.Email</td>
                                    <td>
                                        <a href="@Url.Action("EditGymCenter", "Admin", new { id = gymCenter.Id })" class="btn btn-sm btn-primary">
                                            <i class="bi bi-pencil"></i> Düzenle
                                        </a>
                                        <button type="button" class="btn btn-sm btn-danger" onclick="deleteGymCenter(@gymCenter.Id, this)">
                                            <i class="bi bi-trash"></i> Sil
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle"></i> Henüz spor salonu bulunmamaktadır.
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Admin Paneline Dön
        </a>
    </div>
</div>

<style>
    /* Responsive - Tablet ve Telefon */
    @@media (max-width: 768px) {
        .container-fluid {
            padding-left: 1rem;
            padding-right: 1rem;
        }

        .row.mb-4 h2 {
            font-size: 1.5rem;
        }

        .row.mb-4 p {
            font-size: 0.9rem;
        }

        .row.mb-4 .btn {
            width: 100%;
            max-width: 100%;
            padding: 0.6rem 1rem;
            font-size: 0.9rem;
        }

        .table-responsive {
            border-radius: 8px;
        }

        .table {
            font-size: 0.875rem;
        }

        .table th,
        .table td {
            padding: 0.5rem 0.375rem;
            vertical-align: middle;
        }

        .table th {
            font-size: 0.8rem;
            white-space: nowrap;
        }

        .table td {
            font-size: 0.8rem;
        }

        .table .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
            margin: 0.125rem 0;
        }

        .table .btn-sm i {
            font-size: 0.875rem;
        }

        /* Hide less important columns on mobile */
        .table th:nth-child(3),
        .table td:nth-child(3),
        .table th:nth-child(4),
        .table td:nth-child(4) {
            display: none;
        }
    }

    /* Responsive - Küçük Telefon (576px ve altı) */
    @@media (max-width: 576px) {
        .container-fluid {
            padding-left: 0.75rem;
            padding-right: 0.75rem;
        }

        .row.mb-4 {
            margin-bottom: 1rem !important;
        }

        .row.mb-4 h2 {
            font-size: 1.25rem;
        }

        .row.mb-4 p {
            font-size: 0.85rem;
        }

        .card {
            border-radius: 8px;
        }

        .card-body {
            padding: 1rem;
        }

        .table {
            font-size: 0.8rem;
        }

        .table th,
        .table td {
            padding: 0.4rem 0.25rem;
        }

        .table th {
            font-size: 0.75rem;
        }

        .table td {
            font-size: 0.75rem;
        }

        .table .btn-sm {
            padding: 0.2rem 0.4rem;
            font-size: 0.7rem;
            width: 100%;
            margin: 0.25rem 0;
        }

        .table form {
            width: 100%;
        }

        /* Show only essential columns */
        .table th:nth-child(1),
        .table td:nth-child(1),
        .table th:nth-child(2),
        .table td:nth-child(2),
        .table th:nth-child(7),
        .table td:nth-child(7) {
            display: table-cell;
        }

        .table th:nth-child(3),
        .table td:nth-child(3),
        .table th:nth-child(4),
        .table td:nth-child(4),
        .table th:nth-child(5),
        .table td:nth-child(5),
        .table th:nth-child(6),
        .table td:nth-child(6) {
            display: none;
        }
    }
</style>

<script>
    // API üzerinden spor salonlarını yükleme
    async function loadGymCentersFromApi() {
        const tbody = document.getElementById('gymCentersTableBody');
        const countElement = document.getElementById('gymCenterCount');

        if (!tbody) return;

        // Yükleniyor satırı
        tbody.innerHTML = `<tr>
            <td colspan="7" class="text-center">
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                Veriler API'den getiriliyor...
            </td>
        </tr>`;

        try {
            const response = await fetch('/api/api/gym-centers');
            if (!response.ok) {
                throw new Error('HTTP ' + response.status);
            }

            const result = await response.json();
            if (!result.success) {
                throw new Error(result.message || 'Bilinmeyen API hatası');
            }

            const gymCenters = result.data || [];

            if (countElement) {
                countElement.textContent = `Toplam ${gymCenters.length} spor salonu (REST API üzerinden)`;
            }

            if (!gymCenters.length) {
                tbody.innerHTML = `<tr>
                    <td colspan="7" class="text-center">
                        <i class="bi bi-info-circle"></i> API'den spor salonu bulunamadı.
                    </td>
                </tr>`;
                return;
            }

            const rows = gymCenters.map(g => {
                // Property isimleri hem camelCase hem PascalCase destekleniyor
                const id = g.id || g.Id || 0;
                const name = g.name || g.Name || '';
                const description = (g.description || g.Description || '').length > 50
                    ? (g.description || g.Description || '').substring(0, 50) + '...'
                    : (g.description || g.Description || '');
                const address = (g.address || g.Address || '').length > 30
                    ? (g.address || g.Address || '').substring(0, 30) + '...'
                    : (g.address || g.Address || '');
                const phone = g.phone || g.Phone || '';
                const email = g.email || g.Email || '';

                return `<tr>
                    <td>${id}</td>
                    <td>${name}</td>
                    <td>${description}</td>
                    <td>${address}</td>
                    <td>${phone}</td>
                    <td>${email}</td>
                    <td>
                        <a href="/Admin/Admin/EditGymCenter/${id}" class="btn btn-sm btn-primary">
                            <i class="bi bi-pencil"></i> Düzenle
                        </a>
                        <button type="button" class="btn btn-sm btn-danger" onclick="deleteGymCenter(${id}, this)">
                            <i class="bi bi-trash"></i> Sil
                        </button>
                    </td>
                </tr>`;
            }).join('');

            tbody.innerHTML = rows;
        } catch (error) {
            console.error('API hata:', error);
            tbody.innerHTML = `<tr>
                <td colspan="7" class="text-center text-danger">
                    <i class="bi bi-exclamation-triangle"></i>
                    API'den veriler alınırken hata oluştu: ${error.message}
                </td>
            </tr>`;
            if (countElement) {
                countElement.textContent = "Spor salonları yüklenemedi (API hatası)";
            }
        }
    }

    // DELETE: API üzerinden spor salonu silme
    async function deleteGymCenter(id, buttonElement) {
        if (!confirm('Bu spor salonunu silmek istediğinize emin misiniz?')) {
            return;
        }

        const originalText = buttonElement.innerHTML;
        buttonElement.disabled = true;
        buttonElement.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Siliniyor...';

        try {
            const response = await fetch(`/api/api/gym-centers/${id}`, {
                method: 'DELETE',
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                credentials: 'include'
            });

            if (!response.ok) {
                const errorData = await response.json().catch(() => ({}));
                throw new Error(errorData.message || `HTTP ${response.status}`);
            }

            const result = await response.json();
            if (result.success) {
                // Başarılı - satırı kaldır
                const row = buttonElement.closest('tr');
                if (row) {
                    row.remove();
                }
                // Sayfayı yenile
                await loadGymCentersFromApi();
                alert('Spor salonu başarıyla silindi.');
            } else {
                throw new Error(result.message || 'Silme işlemi başarısız');
            }
        } catch (error) {
            console.error('Delete error:', error);
            alert('Spor salonu silinirken hata oluştu: ' + error.message);
            buttonElement.disabled = false;
            buttonElement.innerHTML = originalText;
        }
    }

    // Sayfa yüklendiğinde API'den verileri çek
    document.addEventListener('DOMContentLoaded', function() {
        loadGymCentersFromApi();
    });
</script>

